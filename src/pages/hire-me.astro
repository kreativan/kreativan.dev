---
import HireLayout from "../layouts/Hire.astro";
import { Icon } from "astro-icon";
import PageHeading from "../components/PageHeading.astro";
import CalFull from "../components/CalFull.astro";

import { getCollection, getEntry } from "astro:content";
const hire = await getEntry("all", "hire");
const why = hire.data.why;
const booking = hire.data.booking;
const comm = hire.data.comm;
---

<HireLayout title="Ivan Milincic - Freelance Web Developer For Hire">
  <section class="uk-section">
    <PageHeading title="[Hire] Me" />
  </section>

  <section class="uk-container">
    <div class="uk-grid uk-child-width-1-3@m uk-grid-divider" uk-grid>
      {
        why.map((item) => (
          <div>
            <h3>
              <Icon
                class="uk-margin-small-right uk-text-primary"
                name={item.icon}
                width="32"
                height="32"
              />
              {item.title}
            </h3>
            <p class="uk-text-small">{item.text}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section class="uk-container uk-margin-large">
    <h2 class="uk-text-center">{booking.title}</h2>
    <p class="uk-width-xlarge uk-margin-auto uk-text-center">
      {booking.text}
    </p>
    <CalFull />
  </section>

  <section class="uk-container uk-container-xsmall uk-margin-large">
    <h2 class="uk-text-center">{comm.title}</h2>
    <p>
      {comm.text}
    </p>
  </section>
</HireLayout>
