---
import { Icon } from "astro-icon";

let { items, grid, grid_size, padding, cls, masonry } = Astro.props;
grid = grid || "1-3";
grid_size = grid_size ? ` uk-grid-${grid_size}` : "";
padding = padding ? `-${padding}` : "";
cls = cls ? ` ${cls}` : "";
masonry = masonry ? "masonry: true" : "";
---

<div
  class=`tm-bg-gradient uk-border-rounded uk-overflow-hidden ${cls}`
  style="padding: 2px;"
>
  <div class=`tm-bg-white uk-padding${padding} uk-border-rounded`>
    <div
      class={`uk-grid ${grid_size} uk-child-width-${grid}@m`}
      uk-grid={masonry}
    >
      {
        items.map((item) => (
          <div>
            <h3 class="uk-margin-small">
              {item.icon && (
                <Icon
                  class="uk-margin-small-right"
                  name={item.icon}
                  width="24"
                  height="24"
                />
              )}
              {item.title}
            </h3>
            <p class="uk-margin-small" set:html={item.text} />
          </div>
        ))
      }
    </div>
  </div>
</div>
